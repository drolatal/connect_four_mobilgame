        <StackLayout>

            <Label Text="Connect Four"  HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="Large" />


            <Button Text="New Game" Clicked="_NewGameButton_Clicked"  Command="{Binding MenuNewGameCommand}"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>